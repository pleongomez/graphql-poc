@model CharacterResponseType

@{
    ViewData["Title"] = "index";
}

<h2>Characters</h2>


<div class="row row-cols-2 row-cols-md-4">

    @{
        foreach (var character in Model.characters?.results)
        {
            <div class="col mb-4">
                <div class="card">
                    <img src="@character.image" class="card-img-top" width="100%" height="180">
                    <div class="card-body">
                        <h5 class="card-title">@character.name</h5>
                        <p class="card-text">@character.species</p>
                        <a href="@Url.Action("detail", "character", new { id = character.id })">Details</a>
                    </div>
                </div>
            </div>
        }
    }
</div>

<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-end">
        <li class="page-item">
            <a class="page-link" href="@Url.Action("index", "character", new { id = Model.characters?.info.prev })">Previous</a>
        </li>

        <li class="page-item">
            <a class="page-link" href="@Url.Action("index", "character", new { id = Model.characters?.info.next })">Next</a>
        </li>
    </ul>
</nav>